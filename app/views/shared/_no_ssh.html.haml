- if cookies[:hide_no_ssh_message].blank? && current_user.require_ssh_key? && !current_user.hide_no_ssh_key
  .no-ssh-key-message
    .container
      #{link_to '添加 SSH 公钥', new_profile_key_path} 到您的个人资料中, 以实现SSH方式 "pull/push" 您的项目.
      .pull-right.hidden-xs
        = link_to "不再提醒", profile_path(user: {hide_no_ssh_key: true}), method: :put, class: 'hide-no-ssh-message', remote: true
        |
        = link_to '下次提醒', '#', class: 'hide-no-ssh-message'
      .links-xs.visible-xs
        = link_to "添加 SSH 公钥", new_profile_key_path
        |
        = link_to "不再提醒", profile_path(user: {hide_no_ssh_key: true}), method: :put, class: 'hide-no-ssh-message', remote: true
        |
        = link_to '下次', '#', class: 'hide-no-ssh-message'
